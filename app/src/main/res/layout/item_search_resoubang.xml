<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tx_item_search_num"
        android:layout_gravity="center"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:gravity="center"
        android:text="1"
        android:textSize="30dp"/>

    <LinearLayout
        android:layout_gravity="center"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tx_item_search_geming"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="下山"
                android:textColor="#333333"
                android:textSize="20dp"/>

            <ImageView
                android:id="@+id/img_item_search_hot"
                android:layout_marginLeft="5dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@mipmap/hot"/>

        </LinearLayout>
       <TextView
           android:id="@+id/tx_item_search_geci"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="一身正气荡人间 除暴安良我心愿"/>



    </LinearLayout>

    <TextView
        android:id="@+id/tx_item_search_renshu"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="158000"/>

</LinearLayout>