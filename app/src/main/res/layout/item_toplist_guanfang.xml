<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:padding="10dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/toplist_img"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:riv_corner_radius="10dp"
            android:src="@mipmap/xinge"/>

        <TextView
            android:id="@+id/toplist_tx_meizhougx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="每周更新"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="75dp"
            android:textColor="#ffffff"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="vertical">
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/toplist_tx_geming1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#333333"
                android:textSize="18dp"
                android:text="1.到底要怎么样"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#333333"
                android:textSize="18dp"
                android:text="—"/>
            <TextView
                android:id="@+id/toplist_tx_zuozhe1"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:textColor="#333333"
                android:textSize="18dp"
                android:lines="1"
                android:ellipsize="end"
                android:text="猜猜我是谁啊啊"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/toplist_tx_geming2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#333333"
                android:textSize="18dp"
                android:text="2.到底要怎么样"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#333333"
                android:textSize="18dp"
                android:text="—"/>
            <TextView
                android:id="@+id/toplist_tx_zuozhe2"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:textColor="#333333"
                android:textSize="18dp"
                android:lines="1"
                android:ellipsize="end"
                android:text="猜猜我是谁啊啊"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/toplist_tx_geming3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#333333"
                android:textSize="18dp"
                android:text="3.到底要怎么样"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#333333"
                android:textSize="18dp"
                android:text="—"/>
            <TextView
                android:id="@+id/toplist_tx_zuozhe3"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:textColor="#333333"
                android:textSize="18dp"
                android:lines="1"
                android:ellipsize="end"
                android:text="猜猜我是谁啊啊"/>
        </LinearLayout>



    </LinearLayout>


</LinearLayout>