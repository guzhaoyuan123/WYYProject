<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center">

        <ImageView
            android:id="@+id/img_find_item_yuncunjingxuan"
            android:layout_width="370dp"
            android:layout_height="220dp"
            android:src="@mipmap/xiaobeijing1"></ImageView>

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="90dp"
            android:layout_marginLeft="170dp"
            android:src="@mipmap/bofang2" />

        <LinearLayout
            android:layout_marginTop="215dp"
            android:layout_width="370dp"
            android:orientation="horizontal"
            android:background="@drawable/yuanjiao4"
            android:layout_height="50dp">
            <TextView
                android:id="@+id/tx_find_item_yuncunjingxuan"
                android:layout_width="300dp"
                android:paddingTop="10dp"
                android:layout_height="50dp"
                android:ellipsize="end"
                android:lines="1"
                android:text="大型空前绝后的演唱会你值得拥有"
                android:textColor="#000000"
                android:textSize="20dp" />


            <ImageView
                android:id="@+id/drawee_img_yuncunjingxuan"
                android:layout_width="40dp"
                android:scaleType="fitXY"
                android:layout_gravity="center"
                android:src="@mipmap/bo01"
                android:layout_height="40dp" />


        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="265dp"
            android:layout_width="370dp"
            android:orientation="horizontal"
            android:background="#FFFFFF"
            android:layout_height="50dp">

        </LinearLayout>




    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="7dp"
        android:background="#E9E6E6" />


</LinearLayout>