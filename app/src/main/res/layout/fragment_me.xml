<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.MeFragment">

    <ScrollView
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="70dp"
                    android:src="@mipmap/wode_shuibingdiantai" />

                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="70dp"
                    android:src="@mipmap/wode_siren" />

                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="70dp"
                    android:src="@mipmap/wode_jiezou" />

                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="70dp"
                    android:src="@mipmap/wode_sicang" />

                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="70dp"
                    android:src="@mipmap/wode_zuihai" />

                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="70dp"
                    android:src="@mipmap/wode_sati" />

                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="70dp"
                    android:src="@mipmap/wode_acg" />

                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="70dp"
                    android:src="@mipmap/wode_yinglejiaoyou" />

                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="70dp"
                    android:src="@mipmap/wode_qinzi" />

                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="70dp"
                    android:src="@mipmap/wode_gudian" />

                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="70dp"
                    android:src="@mipmap/wode_paobu" />

                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="70dp"
                    android:src="@mipmap/wode_jueshi" />

                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="70dp"
                    android:src="@mipmap/wode_jiashi" />

                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="70dp"
                    android:src="@mipmap/wode_yuncun" />

                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="70dp"
                    android:src="@mipmap/wode_bianji" />

            </LinearLayout>

        </HorizontalScrollView>

        <TextView
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="#000000"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_marginLeft="15dp"
                android:layout_gravity="center"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@mipmap/wode_bendiyinyue"/>

            <TextView
                android:layout_marginLeft="15dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="本地音乐"
                android:textColor="#333333"
                android:textSize="20dp"/>

            <TextView
                android:layout_marginLeft="5dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(2)"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_marginLeft="15dp"
                android:layout_gravity="center"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@mipmap/wode_zuijinbofang"/>

            <TextView
                android:layout_marginLeft="15dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#333333"
                android:text="最近播放"
                android:textSize="20dp"/>

            <TextView
                android:layout_marginLeft="5dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(20)"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_marginLeft="15dp"
                android:layout_gravity="center"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@mipmap/wode_xiazaiguanli"/>

            <TextView
                android:layout_marginLeft="15dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#333333"
                android:text="下载管理"
                android:textSize="20dp"/>

            <TextView
                android:layout_marginLeft="5dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(0)"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_marginLeft="15dp"
                android:layout_gravity="center"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@mipmap/wode_wodediantai"/>

            <TextView
                android:layout_marginLeft="15dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的电台"
                android:textColor="#333333"
                android:textSize="20dp"/>

            <TextView
                android:layout_marginLeft="5dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(0)"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_marginLeft="15dp"
                android:layout_gravity="center"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@mipmap/wode_wodeshoucang"/>

            <TextView
                android:layout_marginLeft="15dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的收藏"
                android:textColor="#333333"
                android:textSize="20dp"/>

            <TextView
                android:layout_marginLeft="5dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(专辑/歌手/视频/专栏/Mlog)"/>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="#f5f5f5"/>

        <LinearLayout
            android:background="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <Button
                    android:layout_gravity="center"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@mipmap/wode_xiangzuo"
                    />
                <TextView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="创建的歌单"
                    android:textColor="#333333"
                    android:textSize="25sp"/>
                <TextView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(1)"/>

                <ImageView
                    android:layout_marginLeft="180dp"
                    android:layout_gravity="center"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@mipmap/jia"/>
                <ImageView
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@mipmap/gengduo"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ListView
                    android:id="@+id/wode_listview_gedan"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="gone"/>
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@mipmap/wode_caijian"/>



        </LinearLayout>



    </LinearLayout>


    </ScrollView>

</FrameLayout>